doctype html
html(lang='en')
  include ../common/head.pug
  +head("Login to Starter MVP")
  body
    header 
      include ../common/navbar.pug
      +navbar()
      .container
        .row
          .col-sm-12.offset-md-2.col-md-8
            .jumbotron
              h2.text-center Login
              .row
                .col-sm-12.col-md-12.col-xs-12
                  form(action="/login", method="POST")
                    div.formgroup
                      label.small.mb-1.mt-3 Email:
                      input(type="email", name="email" placeholder='Please enter your email' required=true).form-control 
                      label.small.mb-1.mt-3 Password:
                      input(type="password", name="password" placeholder='New Password' required=true).form-control 
                      button.mt-3.btn.btn-primary(type="submit") Log in
                      p.mt-2.mb-0
                        | Forgot your password? #[a(href="/login") Reset here].
                      p.m-0
                        | Don't have an account #[a(href="/signup") Sign up here].
    include ../common/footer.pug
    +footer()
    script(src="../javascripts/leads.js")  